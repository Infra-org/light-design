.btn.type_primary {
  background-color: var(--_color_primary);
  color: white;
}
.btn.type_border {
  background-color: transparent;
  color: var(--_color_primary);
  border: 2rpx solid var(--_color_primary);
}
.btn.type_default {
  background-color: whitesmoke;
  color: black;
}
.btn.type_dashed {
  background-color: transparent;
  color: black;
  border: 2rpx dashed #eee;
}
.btn.type_warning {
  background-color: var(--_color_warning);
  color: white;
}
.btn.type_success {
  background-color: var(--_color_success);
  color: white;
}
.btn.type_error {
  background-color: var(--_color_error);
  color: white;
}
.btn.type_ghost {
  background-color: transparent;
  color: black;
}
.btn.shape_circle {
  border-radius: 300rpx;
}
.btn.shape_normal {
  border-radius: var(--_radius_normal);
}
.btn.disabled {
  pointer-events: none;
  opacity: 0.5;
}
