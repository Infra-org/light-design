.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: auto;
  height: auto;
  padding: 0;
  margin: 0;
  text-align: center;
  font-weight: normal;
  box-sizing: border-box;
}
.btn::after {
  display: none;
}
.btn:not([size='mini']) {
  width: auto;
  margin: 0;
}
.btn .loading {
  display: inline-block;
  margin-right: 10rpx;
}
