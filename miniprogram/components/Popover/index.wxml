<wxs
      src="./index.wxs"
      module="wxs"
></wxs>

<view
      class="fixed_dialog_wrap"
      catchtouchmove="catchtouchmove"
      style="z-index:{{zIndex}}"
      wx:if="{{_visible_dialog_wrap}}"
>
      <view
            class="mask"
            catchtap="onClose"
      ></view>
      <view
            class="light-dialog {{_visible_dialog?'visible':'hidden'}}"
            style="{{wxs.getDialogStyles({position,color,bgColor,transformOrigin})}}"
            catchtap="onActionItem"
      >
            <view
                  class="mark"
                  style="{{wxs.getMarkStyles({mark,bgColor})}}"
            ></view>
            <button
                  class="action_item"
                  wx:for="{{list}}"
                  wx:key="index"
                  mark:index="{{index}}"
                  style="color:{{color}};"
            >
                  <view
                        class="icon_wrap"
                        wx:if="{{item.icon}}"
                  >
                        <image
                              class="icon_action"
                              mode="widthFix"
                              src="{{item.icon}}"
                        ></image>
                  </view>
                  <text
                        class="name"
                        style="border-bottom:2rpx solid {{divideColor}};"
                  >{{wxs.formatName(item.name)}}</text>
            </button>
      </view>
</view>