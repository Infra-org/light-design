<wxs
      src="./index.wxs"
      module="wxs"
></wxs>

<view
      id="tab_wrap"
      class="tab_wrap"
      style="position: {{zIndex?'relative':'unset'}}; z-index: {{zIndex}};{{styleOfRoot}}"
>
      <view
            class="tab {{vertical?'vertical':''}} {{position}}"
            style="{{vertical?'height:'+heightOfContent:''}};"
      >
            <local-sticky
                  disabled="{{!sticky}}"
                  offsetTop="{{offsetTop}}"
                  zIndex="{{navZIndex}}"
                  wx:if="{{visibleBar}}"
            >
                  <scroll-view
                        class="scroller"
                        scroll-x="{{!vertical}}"
                        scroll-y="{{vertical}}"
                        scroll-into-view="item_{{current_tab}}"
                        scroll-with-animation="{{AnimationOfBar}}"
                        enable-flex
                        enhanced
                        fast-deceleration
                        show-scrollbar="{{false}}"
                        style="{{vertical?'height:'+heightOfBar:''}};{{styleOfBar}};"
                  >
                        <view
                              class="bar_item_wrap"
                              catchtap="onBarItem"
                        >
                              <view
                                    class="active_line"
                                    style="{{wxs.getStylesOfActiveLine({bar_items,current,vertical})}}"
                                    wx:if="{{activeLine}}"
                              ></view>
                              <view
                                    id="item_{{index}}"
                                    class="bar_item {{current===index?'active':''}} {{item.disabled?'disabled':''}}"
                                    wx:for="{{titles}}"
                                    wx:key="index"
                                    mark:index="{{index}}"
                                    style="{{styleOfTitle}};{{current===index?styleOfActive:''}}"
                              >{{item.text}}</view>
                        </view>
                  </scroll-view>
            </local-sticky>
            <view
                  class="scroll_line"
                  wx:if="{{visibleBar&&bordered}}"
                  style="{{vertical?'height:'+heightOfBar:''}}"
            ></view>
            <view
                  class="content_wrap {{AnimationOfContent?'':'no_animation'}} {{vertical?'vertical':''}}"
                  bind:touchstart="onTouchStart"
                  bind:touchmove="onTouchMove"
                  bind:touchend="onTouchEnd"
                  bind:touchcancel="onTouchEnd"
                  style="{{wxs.getStylesOfContentWrap({titles,current,vertical})}};{{styleOfContent}};"
            >
                  <slot></slot>
            </view>
      </view>
</view>