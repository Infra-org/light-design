.fixed_dialog_wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
}
.fixed_dialog_wrap .dialog_wrap {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fixed_dialog_wrap .dialog_wrap .mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: all ease 0.3s;
}
.fixed_dialog_wrap .dialog_wrap .dialog {
  width: 80vw;
  box-sizing: border-box;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  transition: all ease 0.3s;
  overflow: hidden;
}
.fixed_dialog_wrap .dialog_wrap .dialog .dialog_items .swiper {
  height: 100vw;
}
.fixed_dialog_wrap .dialog_wrap .dialog .dialog_items .swiper .swiper_item {
  height: 100%;
}
.fixed_dialog_wrap .dialog_wrap .dialog .dialog_items .swiper .swiper_item .img {
  width: 100%;
  height: 100%;
}
.fixed_dialog_wrap .dialog_wrap .dialog .footer {
  width: 100%;
  box-sizing: border-box;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
}
.fixed_dialog_wrap .dialog_wrap .dialog .footer .title {
  width: calc(100% - 288rpx);
  font-size: 30rpx;
  color: black;
}
.fixed_dialog_wrap .dialog_wrap .dialog .footer .right_options {
  display: flex;
}
.fixed_dialog_wrap .dialog_wrap .dialog .footer .right_options .btn {
  width: 120rpx;
  height: 60rpx;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
  border-radius: 60rpx;
  border: 2rpx solid black;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: transparent;
  font-size: 24rpx;
  line-height: 1;
}
.fixed_dialog_wrap .dialog_wrap .dialog .footer .right_options .btn:active {
  background-color: #eee;
}
.fixed_dialog_wrap .dialog_wrap .dialog .footer .right_options .btn::after {
  display: none;
}
.fixed_dialog_wrap .dialog_wrap .dialog .footer .right_options .btn.btn_prev {
  margin-right: 24rpx;
}
.fixed_dialog_wrap .dialog_wrap .dialog .footer .right_options .btn.disabled {
  color: black;
  opacity: 0.2;
  pointer-events: none;
}
