<wxs
      src="./index.wxs"
      module="wxs"
></wxs>

<button
      class="btn {{wxs.getClasses({mode,size,type,shape,ghost,disabled})}}"
      style="{{wxs.getStyles({width,height,color,bgColor})}}"
>
      <view
            class="loading"
            wx:if="{{loading}}"
      ></view>
      <image
            class="icon"
            mode="widthFix"
            src="{{iconPath}}"
            wx:if="{{iconPath}}"
      ></image>
      <slot name="icon"></slot>
      <view class="text {{iconPath||loading?'has_left':''}}">
            <slot></slot>
      </view>
</button>