.content_wrap {
  position: relative;
  padding: 0;
  margin: 0;
  display: flex;
  background-color: transparent;
}
.content_wrap .ripple_wrap {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.content_wrap .ripple_wrap .ripple {
  position: absolute;
  left: -100%;
  top: -100%;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition-property: opacity, transform;
  transition-duration: 0.3s;
  transition-timing-function: ease;
}
.content_wrap .content {
  background-position: center;
}
