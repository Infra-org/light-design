      <Tips text="size属性仅改变loading的可见大小，不会改变loading的占位大小，原理为scale"></Tips>
      <view class="example_item w_100 border_box flex">
            <view class="title_wrap w_100 border_box flex flex_column">
                  <text class="title">默认</text>
                  <text class="attr">refresh</text>
            </view>
            <view class="examples flex">
                  <view
                        class="example w_100 flex justify_center"
                        style="padding: 72rpx 0;"
                  >
                        <_Loading
                              type="refresh"
                              visible
                        ></_Loading>
                  </view>
            </view>
      </view>
      <view class="example_item w_100 border_box flex">
            <view class="title_wrap w_100 border_box flex flex_column">
                  <text class="title">设定文字</text>
                  <text class="attr">text</text>
            </view>
            <view class="examples flex">
                  <view
                        class="example w_100 flex justify_center"
                        style="padding: 72rpx 0;"
                  >
                        <_Loading
                              type="refresh"
