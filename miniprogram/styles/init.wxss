button {
  padding: 0;
  margin: 0;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  line-height: 1;
  font-weight: normal;
  transition: all ease 0.3s;
}
button:hover {
  transform: scale(1.02);
}
button:active {
  transform: scale(0.92);
}
a {
  text-decoration: none;
  color: black;
  transition: all ease 0.3s;
}
a:hover {
  color: black;
  transform: scale(1.02);
}
a:active {
  transform: scale(0.92);
}
